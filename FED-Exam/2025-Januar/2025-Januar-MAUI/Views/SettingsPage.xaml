<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:JanuarMAUI.ViewModels"
             x:Class="JanuarMAUI.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="Black" 
               CornerRadius="0"
               Padding="20"
               Margin="0">
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="âš™ï¸" FontSize="28" VerticalOptions="Center" />
                <Label Text="{Binding Title}" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       VerticalOptions="Center" />
            </StackLayout>
        </Frame>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout Spacing="20">
                
                <!-- App Information -->
                <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       CornerRadius="15"
                       Padding="20">
                    <StackLayout Spacing="15">
                        <Label Text="App Information" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Version:" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   VerticalOptions="Center" />
                            <Label Text="1.0.0" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0" />
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Build:" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   VerticalOptions="Center" />
                            <Label Text="2025.01" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Data Management -->
                <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       CornerRadius="15"
                       Padding="20">
                    <StackLayout Spacing="15">
                        <Label Text="Data Administration" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        
                        <Button Text="ðŸ—‘ï¸ Slet alle data"
                                Command="{Binding ClearAllDataCommand}"
                                BackgroundColor="#DC3545"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45" />
                        
                        <Label Text="âš ï¸ Dette vil slette alle dine vaner og data permanent!" 
                               FontSize="12" 
                               TextColor="#DC3545"
                               HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>

                <!-- About -->
                <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       CornerRadius="15"
                       Padding="40">
                    <StackLayout Spacing="15" HorizontalOptions="Center">
                        <Label Text="ðŸŽ¯" 
                               FontSize="48" 
                               HorizontalOptions="Center" />
                        <Label Text="Habit Tracker" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Text="Byg gode vaner, en dag ad gangen" 
                               FontSize="14" 
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                        <Label Text="Â© 2025 Januar MAUI Exam" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#888888, Dark=#AAAAAA}"
                               Margin="0,10,0,0" />
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>

    </Grid>

</ContentPage> 